Manages Apache style htpasswd and htgroup files

# add a user
htpasswd { 'dan':
  cryptpasswd => 'MrC7Aq3qPKPaK',  # encrypted password
  target      => '/etc/httpd/conf/htpasswd',
}

# supports adding a user with the same name to a different file
htpasswd { 'dan2':
  username    => 'dan',
  cryptpasswd => 'djkhfsdhfkjsd',  # encrypted password
  target      => '/etc/httpd/conf/htpasswd2',
}

# remove a user
htpasswd { user:
  ensure => absent,
  target => '/etc/httpd/conf/htpasswd',
}




# add a group
htgroup { groupname:
  users  => [ user1, user2, ],
  target => '/etc/httpd/conf/htgroup,
}

# remove a group
htgroup { groupname:
  ensure => absent,
  target => '/etc/httpd/conf/htgroup,
}
