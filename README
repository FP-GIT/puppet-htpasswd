Manages Apache style htpasswd and htgroup files

# add a user
htpasswd { user:
  cryptpasswd => 'MrC7Aq3qPKPaK',  # encrypted password hash goes here
  target      => '/etc/httpd/conf/htpasswd',
}

# remove a user
htpasswd { user:
  ensure => absent,
  target => '/etc/httpd/conf/htpasswd',
}


# add a group
htgroup { groupname:
  users  => [ user1, user2, ],
  target => '/etc/httpd/conf/htgroup,
}

# remove a group
htgroup { groupname:
  ensure => absent,
  target => '/etc/httpd/conf/htgroup,
}
